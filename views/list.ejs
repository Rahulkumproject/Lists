  <%-include('header'); -%> 
    <div class="box" id="heading">
        <h1> <%= day %> </h1>
    </div>
    
     <div class="box">
    <% newitem.forEach(function(ele){%>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value= "<%=ele._id%>"  onChange="this.form.submit()">
                <p> <%= ele.name %> </p>
                <input type="hidden" name="listitems" value="<%= day %>">
            </div>
        </form>
        <% }) %>  
        

    <form class="item" action="/" method="post">
        <input type="text" name="item" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= day %>">+</button>
    </form>
     </div>
     <%-include('footer');  -%> 
           
       

  